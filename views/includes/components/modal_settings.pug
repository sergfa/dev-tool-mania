div#tool-settings.modal.fade(tabindex="-1" role="dialog")
	.modal-dialog.modal-lg(role="document")
	div.modal-content
		div.modal-header
			button.close(type="button"  data-dismiss="modal" aria-label="Close")
				span(aria-hidden="true") &times;
			h4.modal-title Settings
		div.modal-body
			div.settings-instructions
			div#settings-editor
		div.modal-footer
			button.btn.btn-default(type="button" data-dismiss="modal") Close
			button#save-settings.btn.btn-default.save(type="button") Save
			button#restore-settings.btn.btn-default.restore(type="button") Restore Default
			